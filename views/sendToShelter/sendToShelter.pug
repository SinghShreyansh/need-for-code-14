block content
    .main-panel
      .container(style="margin-top:0")
          .page-inner
            .page-header
              h4.page-title Add Details
              ul.breadcrumbs
                li.nav-home
                  a(href='forms.html#')
                  i.flaticon-home
            .row
              .col-md-8
                .card
                  .card-header
                    .card-title Fill Your Data
                  .card-body
                    .row
                      .col-md-10.col-lg-10
                        form( method="POST" action="/account/sendtoShelter" enctype="multipart/form-data")
                                  .form-group(style="display:none")
                                      label(for='addProjectname') OwnerId
                                      input#petFormOwnerId.form-control(type='text' name='id' placeholder='Enter pet name' autocomplete="off" value=`${session.user._id}`)
                                  .form-group
                                      label(for='addProjectname') Full Name
                                      input#addProjectname.form-control(type='text' name='name' placeholder='Enter your name' required='' autocomplete="off")
                                  .form-group
                                      label(for='addProjectname') Email Id
                                      input#addProjectname.form-control(type='email' name='email' placeholder='Enter your name' required='' autocomplete="off")
                                  .form-group
                                      label(for='addProjectname') Mobile Number
                                      input#addProjectname.form-control(type='tel' name='phone' placeholder='XXXXXXXXXX' required='' autocomplete="off" pattern="[0-9]{10}")
                                  .form-group
                                      label(for='addProjectDetail') Address Detail
                                      textarea#addProjectDetail.form-control(name="address" rows='5' placeholder="Enter your details")
                                  .form-group
                                      label ID Proof Image :
                                      .input-file.input-file-image(style='margin-left:30%')
                                            img.img-upload-preview.img-circle(width='100' height='100' src='' alt='preview')
                                            input#uploadImg.form-control.form-control-file(type='file' name='document' accept='image/*' required='')
                                            label.label-input-file.btn.btn-primary(for='uploadImg') Upload a Document
                                  button.btn.btn-primary.btn-block.ml-4.mt-4(type="submit") Next
              .col-md-4
                  ul.timeline
                    li
                      .timeline-badge.danger
                        i.flaticon-error
                      .timeline-panel
                        .timeline-heading
                          h4.timeline-title Enter Owner's Details
                          p
                            small.text-muted
                              i.flaticon-message
                              |  First step
                        .timeline-body
                          p
                            | It is important to fill owner's details and photo ID
                    li.timeline-inverted
                      .timeline-badge
                        i.flaticon-alarm-1
                      .timeline-panel
                        .timeline-heading
                          h4.timeline-title Enter Pet's Details
                        .timeline-body
                          p
                            | It is important to fill pet's details with photo ID
                    li
                      .timeline-badge
                        i.flaticon-message
                      .timeline-panel
                        .timeline-heading
                          h4.timeline-title Submitted Form
                        .timeline-body
                          p
                            | After submission successfully , nearby shelter will contact you


